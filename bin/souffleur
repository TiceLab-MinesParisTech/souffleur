#!/bin/bash

NODEJS=/usr/bin/nodejs
APP=/usr/share/souffleur/app.js

#default settings

#host=0.0.0.0
#port=8080
filesdir=/var/souffleur
user=souffleur
group=souffleur


# Include conf if available
if [ -f /etc/souffleur.conf ] ; then
	. /etc/souffleur.conf
fi

CMD=""
if [ -n "$host" ]
then
	CMD="$CMD -H$host"
fi

if [ -n "$port" ]
then
	CMD="$CMD -P$port"
fi

if [ -n "$filesdir" ]
then
	CMD="$CMD -F$filesdir"
fi

if [ -n "$user" ]
then
	CMD="$CMD -U$user"
fi

if [ -n "$group" ]
then
	CMD="$CMD -G$group"
fi

for i in {1..999}
do
	VAR_HOST="hyperdeck${i}_host"
	VAR_NAME="hyperdeck${i}_name"
	VAR_SOURCE="hyperdeck${i}_source"

	if [ -n "${!VAR_NAME}" ]
	then
		HOST=${!VAR_HOST}
		NAME=${!VAR_NAME}
		SOURCE=${!VAR_SOURCE}

		CMD="$CMD +Hyperdeck:$HOST:$NAME:$SOURCE"
	else
		break
	fi
done

$NODEJS $APP $CMD


